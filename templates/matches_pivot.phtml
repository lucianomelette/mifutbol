		<!-- Optional JavaScript -->
		<script>
			$(function(){
				
				refreshPivot();

				function refreshPivot()
				{
					// pivot
					$.ajax({
						method: 'POST',
						url: '/matches/pivot',
						success: function(data, textStatus, jqXHR)
						{
							debugger;
							if (data.Result == 'OK')
							{
								var htmlTable = 
									'<table class="table">' +
										'<thead>' +
											'<tr>' +
												'<td>Fecha</td>' +
												'<td>Blancos</td>' +
												'<td>Negros</td>' +
												'<td>Comentarios</td>' +
											'</tr>' +
										'<tbody>';

								var countWhites = 0;
								var countBlacks = 0;

								data.Records.forEach(function(item)
								{
									debugger;
									var d = new Date(item.Fecha);
									d.setHours(d.getHours() + 3);

									countWhites += parseInt(item.Blancos);
									countBlacks += parseInt(item.Negros);

									htmlTable += 
										'<tr>' +
											`<td>${d.toLocaleDateString()}</td>` +
											`<td>${item.Blancos}</td>` +
											`<td>${item.Negros}</td>` +
											`<td>${item.Comentarios}</td>` +
										'</tr>';
								});

								htmlTable +=
									'<tr>' +
										'<td></td>' +
										`<td>${countWhites}</td>` +
										`<td>${countNegros}</td>` +
										'<td></td>' +
									'</tr>' +
									'</tbody>' +
									'</table>';

								$('#pivot').append(htmlTable);
							}
							else {
								alert('error');
							}
						},
						error: function(jqXHR, textStatus, errorThrown) {
							console.warn(jqXHR.responseText);
						},
					});
				}
			});
		</script>
